<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="appletLeYuan"
            type="com.chaoji.im.data.model.AppletsLeYuan" />

        <import type="android.view.View" />

        <import type="com.chaoji.im.utils.UtilTime" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mod_main_layout_bg"
        android:orientation="vertical"
        android:paddingVertical="@dimen/idp_10"
        android:paddingHorizontal="@dimen/idp_15"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/idp_30"
                android:layout_height="@dimen/idp_30"
                android:layout_gravity="center"
                app:loadRound11Image="@{appletLeYuan.pic}"
                tools:src="@mipmap/mod_icon" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/idp_10"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{appletLeYuan.xiaobian}"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/isp_13"
                tools:text="屠龙刀" />

            <TextView
                android:id="@+id/app_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="2"
                app:setFormattedTimestamp="@{appletLeYuan.fabutime}"
                android:textColor="#AAADAF"
                android:textSize="@dimen/isp_13"
                tools:text="2025.06.24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/idp_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{appletLeYuan.title}"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/isp_16"
                android:textStyle="bold"
                tools:text="外网玩家曝N网正在删除一些《剑仙》的新闻" />

            <TextView
                android:id="@+id/title_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/idp_8"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{appletLeYuan.title}"
                android:textColor="#232323"
                android:textSize="@dimen/isp_14"
                tools:text="6月12日，英雄游戏旗下潘神工作室自主研发的幻想风多维战斗爽游《二重螺旋》..." />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/idp_10"
            android:orientation="horizontal"
            android:weightSum="9">

            <ImageView
                android:id="@+id/pic1"
                android:layout_width="0dp"
                android:layout_height="@dimen/idp_100"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/idp_3"
                android:layout_marginEnd="@dimen/idp_5"
                android:layout_weight="3"
                app:loadRound12Image="@{appletLeYuan.pic2}"
                tools:src="@mipmap/mod_icon" />

            <ImageView
                android:id="@+id/pic2"
                android:layout_width="0dp"
                android:layout_height="@dimen/idp_100"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/idp_5"
                android:layout_marginTop="@dimen/idp_3"
                android:layout_weight="3"
                app:loadRound12Image="@{appletLeYuan.pic3}"
                tools:src="@mipmap/mod_icon" />

            <ImageView
                android:id="@+id/pic3"
                android:layout_width="0dp"
                android:layout_height="@dimen/idp_100"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/idp_5"
                android:layout_marginTop="@dimen/idp_3"
                android:layout_weight="3"
                app:loadRound12Image="@{appletLeYuan.pic4}"
                tools:src="@mipmap/mod_icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dianzanLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/idp_15"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dianzan"
                android:layout_width="@dimen/idp_15"
                android:layout_height="@dimen/idp_15"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/idp_8"
                android:shadowColor="@color/text_default_color"
                android:src="@drawable/mod_dianzan"
                app:tint="@{appletLeYuan.select?@color/mod_dianzan_2:@color/mod_dianzan_1}" />

            <TextView
                android:id="@+id/dianzanCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="2"
                android:text="2000"
                android:textColor="@{appletLeYuan.select?@color/mod_dianzan_2:@color/mod_dianzan_1}"
                android:textSize="@dimen/isp_13"
                tools:text="2025" />
        </LinearLayout>


    </LinearLayout>

</layout>