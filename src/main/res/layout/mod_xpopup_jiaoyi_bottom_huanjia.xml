<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/a_rounded_top_b_10"
    android:orientation="vertical"
    android:paddingVertical="@dimen/idp_20">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="我要还价"
            android:textColor="@color/text_default_color"
            android:textSize="@dimen/isp_16"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/cancel"
            android:layout_width="@dimen/idp_22"
            android:layout_height="@dimen/idp_22"
            android:layout_alignParentEnd="true"
            android:paddingStart="@dimen/idp_1"
            android:paddingTop="@dimen/idp_10"
            android:paddingEnd="@dimen/idp_10"
            android:src="@drawable/close_g_ic"
            android:visibility="gone" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/idp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="当前售价："
                android:textColor="#999999"
                android:textSize="@dimen/isp_16"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="￥"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/isp_28"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="10.00"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/isp_28"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/infoLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.chaoji.im.ui.view.ClearEditText
                android:id="@+id/edit_liuyan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/idp_80"
                android:layout_marginHorizontal="@dimen/idp_20"
                android:layout_marginTop="@dimen/idp_10"
                android:background="@drawable/bg_huanjia_edit"
                android:gravity="top|start"
                android:hint="给卖家留言"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:paddingHorizontal="@dimen/idp_15"
                android:paddingVertical="@dimen/idp_10"
                android:textSize="@dimen/isp_15" />


            <TextView
                style="@style/AnswerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/idp_20"
                android:text="**建议还价，卖家改价后会通过消息中心通知您**" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/idp_20"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/idp_20">

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="@dimen/idp_150"
                android:layout_height="@dimen/idp_40"
                android:layout_marginEnd="@dimen/idp_10"
                android:layout_weight="1"
                android:background="@drawable/button_cancel_selector_2"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="@dimen/isp_15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reg_password2_ll" />

            <Button
                android:id="@+id/confirm_button"
                android:layout_width="@dimen/idp_150"
                android:layout_height="@dimen/idp_40"
                android:layout_marginStart="@dimen/idp_10"
                android:layout_weight="1"
                android:background="@drawable/button_circle_selector"
                android:gravity="center"
                android:text="确认还价"
                android:textColor="@color/white"
                android:textSize="@dimen/isp_15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reg_password2_ll" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>