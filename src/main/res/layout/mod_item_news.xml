<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.box.other.blankj.utilcode.util.StringUtils" />

        <variable
            name="modData"
            type="com.box.common.data.model.ModDataBean" />

    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/idp_180"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pic1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop"
            app:loadRound11UrlImage="@{modData.image}"
            tools:src="@drawable/mod_test_pic2" />

        <ImageView
            android:id="@+id/bg_black_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_black_trans_bottom" />


        <LinearLayout
            android:layout_gravity="bottom"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/idp_10"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/idp_10"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="1"
                android:text="@{modData.title}"
                android:textColor="@color/white"
                android:textSize="@dimen/isp_13"
                android:textStyle="bold"
                tools:text="《英雄联盟》2025总决赛！" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="3"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="1"
                android:text="了解赛事"
                android:textColor="@color/white"
                android:textSize="@dimen/isp_13"
                android:textStyle="bold"
                tools:text="了解赛事" />


        </LinearLayout>

    </FrameLayout>

</layout>