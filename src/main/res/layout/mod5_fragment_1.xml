<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="com.chaoji.mod.ui.activity.modmain.mod5.Mod5Fragment1Model" />

        <variable
            name="click"
            type="com.chaoji.mod.ui.activity.modmain.mod5.Mod5Fragment1.ProxyClick" />

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#61E3F7"
        android:orientation="vertical">

        <com.chaoji.other.hjq.titlebar.TitleBar
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/idp_40"
            android:gravity="center"
            android:visibility="gone"
            app:leftIcon="@drawable/arrows_left_b_ic"
            app:titleColor="@color/text_default_color"
            app:titleSize="@dimen/isp_16"
            app:titleStyle="bold" />

        <LinearLayout
            android:id="@+id/navigation1_cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/idp_10"
            android:layout_marginVertical="@dimen/idp_10"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mod_main_layout_bg"
                android:orientation="horizontal"
                android:padding="@dimen/idp_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_default="wrap"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                bind:itemCount="2"
                tools:listitem="@layout/mod5_item_applets" />

            <LinearLayout
                android:id="@+id/gameImageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/idp_10"
                android:orientation="horizontal"
                android:weightSum="10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recyclerView">

                <ImageView
                    android:id="@+id/game1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/idp_5"
                    android:layout_weight="5"
                    android:gravity="start"
                    android:onClick="@{()-> click.game1()}"
                    android:src="@mipmap/mod_game_game1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/idp_5"
                    android:layout_weight="5"
                    android:gravity="end"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <ImageView
                        android:id="@+id/game2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{()-> click.game2()}"
                        android:src="@mipmap/mod_game_game2" />

                    <ImageView
                        android:id="@+id/game3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/idp_10"
                        android:onClick="@{()-> click.game3()}"
                        android:src="@mipmap/mod_game_game3" />
                </LinearLayout>
            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/idp_10"
                android:background="@drawable/mod_main_layout_bg"
                android:orientation="horizontal"
                android:padding="@dimen/idp_10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/gameImageLayout"
                bind:itemCount="2"
                tools:listitem="@layout/mod_item_applets_desc" />


        </LinearLayout>
    </LinearLayout>
</layout>