<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="applet"
            type="com.box.common.data.model.ModInfo" />

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/item_click_selector"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/idp_5">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/idp_90"
            android:layout_height="@dimen/idp_150"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/idp_3"
            app:loadRound11Image="@{applet.pic}" />

    </LinearLayout>

</layout>