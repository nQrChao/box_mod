<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="com.box.mod.ui.fragment.fragment1.Navigation11Model" />

        <variable
            name="goodDetailBean"
            type="com.box.common.data.model.ModTradeGoodDetailBean" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/mod_tyf_f1_title_bg1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/idp_20">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/idp_70"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/mod_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/idp_10"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/idp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="1"
                    android:text="@{goodDetailBean.gamename}"
                    android:textColor="@color/text_default_color"
                    android:textSize="@dimen/isp_15"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:maxLines="1"
                    android:text="￥520"
                    android:textColor="#FF2D3F"
                    android:textSize="@dimen/isp_15"
                    android:textStyle="bold" />


            </LinearLayout>
            <TextView
                android:id="@+id/name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/idp_10"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="1"
                android:text="回合 武侠·格调1服"
                android:textColor="@color/bbl_999999"
                android:textSize="@dimen/isp_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/idp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tip1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_ffffff_4e76ff_stroke_2_radius"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="1"
                    android:paddingHorizontal="@dimen/idp_5"
                    android:paddingVertical="@dimen/idp_2"
                    android:text="天天送6480"
                    android:textColor="#4E76FF"
                    android:textSize="@dimen/isp_10" />

                <TextView
                    android:id="@+id/tip2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/idp_5"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="1"
                    android:text="累计消费（元）5202.00"
                    android:textColor="@color/bbl_999999"
                    android:textSize="@dimen/isp_12" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</layout>

