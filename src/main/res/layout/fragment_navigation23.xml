<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.box.other.blankj.utilcode.util.StringUtils" />

        <variable
            name="vm"
            type="com.box.mod.ui.fragment.Navigation23Model" />

        <variable
            name="click"
            type="com.box.mod.ui.fragment.FragmentNavigation23.ProxyClick" />
    </data>

    <LinearLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/me_swipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/topImage"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/idp_500"
                        android:layout_centerHorizontal="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/mod_f3_youhui_top_bg" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/idp_10"
                        android:layout_marginTop="@dimen/idp_370"
                        android:background="@drawable/mod_f3_top_bg"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/idp_10">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/idp_35"
                            android:background="@color/transparent"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            bind:itemCount="4"
                            tools:listitem="@layout/mod_item_applets" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/mod_f3_youhui_top_item_bg"
                            android:paddingHorizontal="@dimen/idp_5">

                            <LinearLayout
                                android:id="@+id/priceLayout"
                                android:layout_width="@dimen/idp_55"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/price"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:text="@{StringUtils.format(&quot;￥%s&quot;, vm.youhuiquanBean.pftAsInt)}"
                                    android:textColor="@color/white90"
                                    android:textSize="@dimen/isp_19"
                                    android:textStyle="bold"
                                    tools:text="￥555" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:gravity="center_horizontal"
                                    android:text="满减券"
                                    android:textColor="@color/white90"
                                    android:textSize="@dimen/isp_12"
                                    android:textStyle="bold"
                                    tools:text="满减券" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/titleLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/idp_18"
                                android:layout_toStartOf="@id/button"
                                android:layout_toEndOf="@id/priceLayout"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@{StringUtils.format(&quot;单笔满%s元可用&quot;, vm.youhuiquanBean.pftAsInt)}"
                                    android:textColor="#FC4F35"
                                    android:textSize="@dimen/isp_16"
                                    android:textStyle="bold"
                                    tools:text="单笔满648元可用" />

                                <TextView
                                    android:id="@+id/title2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/idp_3"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@{StringUtils.format(&quot;适用于：《%s》&quot;, vm.youhuiquanBean.displayName)}"
                                    android:textColor="@color/text_default_color"
                                    android:textSize="@dimen/isp_12"
                                    android:textStyle="bold"
                                    tools:text="适用于：" />

                                <TextView
                                    android:id="@+id/title3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/idp_3"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="领取后7日内有效"
                                    android:textColor="@color/text_default_color"
                                    android:textSize="@dimen/isp_12"
                                    android:textStyle="bold"
                                    tools:text="领取后7日内有效" />
                            </LinearLayout>

                            <Button
                                android:id="@+id/button"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/idp_30"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/idp_5"
                                android:alpha="@{vm.youhuiquanBean.bgAlpha}"
                                android:background="@drawable/mod_f3_top_item_button_bg"
                                android:onClick="@{() -> click.topLingQu()}"
                                android:text="@{vm.youhuiquanBean.itemHasGetText}"
                                android:textColor="@color/white"
                                android:textSize="@dimen/isp_12"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingVertical="@dimen/idp_10"
                            android:text="· 温馨提示：领取后请于游戏内使用 ·"
                            android:textColor="#FF8A4E"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/idp_350"
                        android:background="@drawable/mod_f3_youhui_top_title_bg" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/idp_365"
                        android:background="@drawable/mod_f3_youhui_top_title_text1" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/idp_15"
                    android:paddingBottom="@dimen/idp_15">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/idp_10"
                        android:layout_marginTop="@dimen/idp_20"
                        android:background="@drawable/mod_f3_top_bg"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/idp_5">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/idp_35"
                            android:background="@color/transparent"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/idp_10"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            bind:itemCount="4"
                            tools:listitem="@layout/mod_item_youhuiquan_2" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/mod_f3_youhui_top_title_bg" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/idp_16"
                        android:background="@drawable/mod_f3_youhui_top_title_text2" />

                </RelativeLayout>

                <TextView
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/idp_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="更多福利上新中……"
                    android:textColor="@color/white"
                    android:textSize="@dimen/isp_15" />

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</layout>