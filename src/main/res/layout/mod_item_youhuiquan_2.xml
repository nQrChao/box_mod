<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.box.other.blankj.utilcode.util.StringUtils" />

        <variable
            name="clickHandler"
            type="com.box.mod.ui.fragment.fragment1.Nav1ClickHandler" />

        <variable
            name="youhuiquanBean"
            type="com.box.common.data.model.ModYouHuiQuanBean" />
    </data>

    <LinearLayout
        android:layout_width="@dimen/idp_160"
        android:layout_height="@dimen/idp_100"
        android:background="@drawable/mod_f3_youhui_top_item_bg2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/idp_16"
            android:alpha="@{youhuiquanBean.bgAlpha}"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/idp_10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/idp_40"
                android:layout_height="@dimen/idp_40"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/mod_icon"
                app:loadRound11Image="@{youhuiquanBean.gameicon}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/idp_16"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:maxLines="1"
                    android:text="@{StringUtils.format(&quot;%s元代金券&quot;, youhuiquanBean.pftAsInt)}"
                    android:textColor="#FA275D"
                    android:textSize="@dimen/isp_13"
                    android:textStyle="bold"
                    tools:text="520元代金券" />

                <TextView
                    android:id="@+id/name2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="1"
                    android:text="@{StringUtils.format(&quot;满%s元可用&quot;, youhuiquanBean.pftAsInt)}"
                    android:textColor="#FA275D"
                    android:textSize="@dimen/isp_10"
                    tools:text="满648元可用" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="1"
                    android:text="领取7日内有效"
                    android:textColor="#FA275D"
                    android:textSize="@dimen/isp_10"
                    tools:text="领取7日内有效" />
            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/idp_16"
            android:paddingHorizontal="@dimen/idp_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="1"
                android:text="@{StringUtils.format(&quot;限《%s》游戏使用&quot;, youhuiquanBean.displayName)}"
                android:textColor="@color/white"
                android:textSize="@dimen/isp_9"
                tools:text="限《微微三国》游戏使用" />

            <Button
                android:id="@+id/lingqu"
                android:layout_width="@dimen/idp_35"
                android:layout_height="@dimen/idp_18"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:alpha="@{youhuiquanBean.bgAlpha}"
                android:background="@drawable/button_cancel_selector_4"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{youhuiquanBean.itemHasGetText2}"
                android:textColor="@color/white"
                android:textSize="@dimen/isp_10"
                android:textStyle="bold"
                tools:text="领取" />
        </RelativeLayout>


    </LinearLayout>


</layout>

