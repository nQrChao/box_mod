<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="localAppletInfo"
            type="com.box.common.data.model.ModLocalAppletsInfo" />
    </data>

    <LinearLayout
        android:padding="@dimen/idp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mod_main_layout_bg"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/idp_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/idp_50"
                android:layout_height="@dimen/idp_50"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/idp_3"
                app:loadRound11Image="@{localAppletInfo.icon}" />


            <LinearLayout
                android:layout_marginStart="@dimen/idp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/idp_5">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/idp_5"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:text="@{localAppletInfo.title}"
                    android:textColor="@color/text_default_color"
                    android:textSize="@dimen/isp_14" />

                <TextView
                    android:id="@+id/app_title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/idp_5"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@{localAppletInfo.title2}"
                    android:textColor="@color/black80"
                    android:textSize="@dimen/isp_13" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="@dimen/idp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:id="@+id/pic1"
                android:layout_width="0dp"
                android:layout_height="@dimen/idp_100"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/idp_3"
                android:layout_marginEnd="@dimen/idp_5"
                android:layout_weight="5"
                android:scaleType="fitXY"
                app:loadRound11Image="@{localAppletInfo.pic1}" />

            <ImageView
                android:id="@+id/pic2"
                android:layout_width="0dp"
                android:layout_height="@dimen/idp_100"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/idp_5"
                android:layout_marginTop="@dimen/idp_3"
                android:layout_weight="5"
                android:scaleType="fitXY"
                app:loadRound11Image="@{localAppletInfo.pic2}" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/idp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_marginEnd="@dimen/idp_5"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/pic3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/idp_100"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/idp_3"
                    android:scaleType="fitXY"
                    app:loadRound11Image="@{localAppletInfo.pic3}" />

                <TextView
                    android:id="@+id/desc3_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/idp_5"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{localAppletInfo.desc3_1}"
                    android:textColor="@color/text_default_color"
                    android:textSize="@dimen/isp_14"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/desc3_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/idp_5"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{localAppletInfo.desc3_2}"
                    android:textColor="#B8B8B8"
                    android:textSize="@dimen/isp_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="@dimen/idp_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/pic4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/idp_100"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/idp_3"
                    android:scaleType="fitXY"
                    app:loadRound11Image="@{localAppletInfo.pic4}" />

                <TextView
                    android:id="@+id/desc4_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/idp_5"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:text="@{localAppletInfo.desc4_1}"
                    android:textColor="@color/text_default_color"
                    android:textSize="@dimen/isp_14" />

                <TextView
                    android:id="@+id/desc4_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/idp_5"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{localAppletInfo.desc4_2}"
                    android:textColor="#B8B8B8"
                    android:textSize="@dimen/isp_13" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</layout>