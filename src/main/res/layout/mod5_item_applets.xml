<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="applet"
            type="com.box.common.data.model.AppletsInfo" />

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/item_click_selector"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/idp_5">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/idp_65"
            android:layout_height="@dimen/idp_65"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/idp_3"
            app:loadRoundSizeImage="@{applet.pic}" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/idp_5"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxLength="5"
            android:text="@{applet.title}"
            android:textColor="@color/text_default_color"
            android:textSize="@dimen/isp_13" />

    </LinearLayout>

</layout>