<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.chaoji.im.utils.UtilTime" />

        <import type="com.chaoji.other.blankj.utilcode.util.StringUtils" />

        <variable
            name="vm"
            type="com.chaoji.mod.ui.activity.ModActivityGameDetailsModel" />

        <variable
            name="click"
            type="com.chaoji.mod.ui.activity.ModActivityGameDetails.ProxyClick" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mod_home_bg_color"
        android:orientation="vertical">

        <com.chaoji.other.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/idp_70"
            app:srlEnableFooterTranslationContent="true"
            app:srlEnableHeaderTranslationContent="true"
            app:srlEnableLoadMore="false"
            app:srlEnableOverScrollBounce="true"
            app:srlEnableOverScrollDrag="true"
            app:srlEnablePureScrollMode="true"
            app:srlReboundDuration="700"
            app:tab_draw_divider="true">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/me_swipe"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/centerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.youth.banner.Banner
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/idp_200" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:paddingHorizontal="@dimen/idp_15"
                        android:paddingVertical="@dimen/idp_15">

                        <ImageView
                            android:id="@+id/icon"
                            android:layout_width="@dimen/idp_60"
                            android:layout_height="@dimen/idp_60"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:loadRound11Image="@{vm.modGameInfo.gameicon}"
                            tools:src="@mipmap/mod_icon" />

                        <LinearLayout
                            android:id="@+id/textLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/idp_10"
                            android:layout_marginEnd="@dimen/idp_70"
                            android:layout_toEndOf="@id/icon"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="@id/icon"
                            app:layout_constraintLeft_toRightOf="@id/icon"
                            app:layout_constraintTop_toTopOf="@+id/icon">

                            <TextView
                                android:id="@+id/name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@{vm.modGameInfo.gamename}"
                                android:textColor="@color/text_default_color"
                                android:textSize="@dimen/isp_13"
                                android:textStyle="bold"
                                tools:text="神陵武装神陵武装神陵武装神陵武装" />

                            <TextView
                                android:id="@+id/tip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:paddingVertical="@dimen/idp_2"
                                android:singleLine="true"
                                android:text="@{vm.modGameInfo.game_summary}"
                                android:textColor="@color/bbl_999999"
                                android:textSize="@dimen/isp_12"
                                tools:text="格调1服·榜二高战成品号格调1服*神陵武装神陵武装神陵武装神陵武装" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerViewTips"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/idp_3"
                                tools:itemCount="1"
                                tools:listitem="@layout/mod_item_game_label" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/mod_game_detail_zhekou_bg"
                            android:gravity="center"
                            android:paddingBottom="@dimen/idp_4"
                            android:text="@{StringUtils.format(&quot;%s折&quot;,vm.modGameInfo.discount)}"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/xingxingLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/icon"
                            android:layout_marginTop="@dimen/idp_23">

                            <LinearLayout
                                android:id="@+id/xingLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/fenshu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/idp_10"
                                    android:gravity="center_horizontal"
                                    android:textColor="#3E99FD"
                                    android:textSize="@dimen/isp_18"
                                    android:textStyle="bold"
                                    app:ratingText="@{vm.score}"
                                    tools:text="3.5" />

                                <ImageView
                                    android:id="@+id/xing1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/idp_20"
                                    android:layout_marginTop="@dimen/idp_5"
                                    android:src="@drawable/mod_game_detail_xing_all"
                                    app:ratingScore="@{vm.score}"
                                    app:starPosition="@{1}" />

                                <ImageView
                                    android:id="@+id/xing2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/idp_3"
                                    android:layout_marginTop="@dimen/idp_5"
                                    android:src="@drawable/mod_game_detail_xing_all"
                                    app:ratingScore="@{vm.score}"
                                    app:starPosition="@{2}" />

                                <ImageView
                                    android:id="@+id/xing3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/idp_3"
                                    android:layout_marginTop="@dimen/idp_5"
                                    android:src="@drawable/mod_game_detail_xing_all"
                                    app:ratingScore="@{vm.score}"
                                    app:starPosition="@{3}" />

                                <ImageView
                                    android:id="@+id/xing4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/idp_3"
                                    android:layout_marginTop="@dimen/idp_5"
                                    android:src="@drawable/mod_game_detail_xing_ban"
                                    app:ratingScore="@{vm.score}"
                                    app:starPosition="@{4}" />

                                <ImageView
                                    android:id="@+id/xing5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/idp_3"
                                    android:layout_marginTop="@dimen/idp_5"
                                    android:src="@drawable/mod_game_detail_xing_kong"
                                    app:ratingScore="@{vm.score}"
                                    app:starPosition="@{5}" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/xingText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/xingLayout"
                                android:layout_marginTop="@dimen/idp_10"
                                android:text="@{StringUtils.format(&quot;%s人评分&quot;, vm.downloadCount)}"
                                android:textColor="#919191"
                                android:textSize="@dimen/isp_14"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="@+id/xingLayout"
                                app:layout_constraintStart_toStartOf="@id/xingLayout"
                                app:layout_constraintTop_toBottomOf="@id/xingLayout" />

                            <ImageView
                                android:id="@+id/xingLine"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/mod_game_detail_xing_fenge"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.chaoji.im.ui.view.DrawableTextView
                                android:id="@+id/youhuiText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/idp_30"
                                android:layout_weight="3"
                                android:drawableTop="@drawable/mod_game_detail_fuli_ic"
                                android:drawablePadding="@dimen/idp_5"
                                android:gravity="center"
                                android:text="优惠券"
                                android:textColor="#919191"
                                android:textSize="@dimen/isp_12"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@id/xingLine"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.chaoji.im.ui.view.DrawableTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/idp_30"
                                android:layout_weight="3"
                                android:drawableTop="@drawable/mod_game_detail_fuli_ic"
                                android:drawablePadding="@dimen/idp_5"
                                android:gravity="center"
                                android:text="礼包码"
                                android:textColor="#919191"
                                android:textSize="@dimen/isp_12"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@id/youhuiText"
                                app:layout_constraintTop_toTopOf="parent" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <ImageView
                            android:id="@+id/xingTextLine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/xingxingLayout"
                            android:layout_marginTop="@dimen/idp_30"
                            android:src="@drawable/mod_game_detail_xing_line" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/xingTextLine"
                            android:layout_marginTop="@dimen/idp_15"
                            android:gravity="center"
                            android:text="温馨提示：未成年人禁止发布或购买虚拟游戏账号"
                            android:textColor="#3E99FD"
                            android:textSize="@dimen/isp_12" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/idp_15"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/idp_10"
                        android:paddingVertical="@dimen/idp_10">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewPic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/idp_10"
                            android:background="@color/transparent"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            bind:itemCount="4"
                            tools:listitem="@layout/mod_item_game_detail_pic" />

                        <TextView
                            style="@style/AnswerTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{vm.modGameInfo.game_description}"
                            android:textColor="#9D9D9D"
                            android:textSize="@dimen/isp_12" />


                    </LinearLayout>


                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </com.chaoji.other.scwang.smartrefresh.layout.SmartRefreshLayout>

        <RelativeLayout
            android:id="@+id/fl_good_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/idp_50"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="#3E99FD"
            android:paddingHorizontal="@dimen/idp_10">

            <TextView
                android:id="@+id/confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:onClick="@{()->click.checkFuLi()}"
                android:text="查看福利"
                android:textColor="@color/white"
                android:textSize="@dimen/isp_16"
                android:textStyle="bold"
                tools:text="查看福利" />
        </RelativeLayout>
    </RelativeLayout>
</layout>