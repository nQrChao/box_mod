<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="title"
            type="String" />
        <variable
            name="select"
            type="Boolean" />
        <variable
            name="modTab"
            type="com.box.mod.ui.data.ModTabTextBean" />
    </data>

    <TextView
        android:id="@+id/tv_tab_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/idp_30"
        android:text="@{modTab.name}"
        app:dynamicBackground="@{modTab.bg()}"
        android:paddingVertical="@dimen/idp_5"
        android:paddingHorizontal="@dimen/idp_20"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/isp_13"
        android:gravity="center"
        tools:text="小游戏合集"
        tools:background="@drawable/bg_item_tab_text_default"
        app:dynamicTextColor="@{modTab.txtColor()}"/>

</layout>