<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="appletInfoLunTan"
            type="com.chaoji.im.data.model.AppletsLunTan" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingHorizontal="@dimen/idp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/idp_120"
            android:layout_height="@dimen/idp_75"
            android:scaleType="centerCrop"
            app:loadRound10Image="@{appletInfoLunTan.pic}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/mod_icon" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/idp_10"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{appletInfoLunTan.title}"
            android:textColor="@color/text_default_color"
            android:textSize="@dimen/isp_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon"
            app:layout_constraintTop_toTopOf="@id/icon"
            app:layout_constraintBottom_toTopOf="@+id/shijian"
            tools:text="《英雄联盟》S12全球总决赛即将开启，大家准备好了吗？" />

        <TextView
            android:id="@+id/shijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/idp_10"
            app:setFormattedTimestamp="@{appletInfoLunTan.fabutime}"
            android:textColor="#AAADAF"
            android:textSize="@dimen/isp_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/icon"
            tools:text="2025.07.03" />

        <View
            android:id="@+id/view3"
            android:layout_marginTop="@dimen/idp_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shijian"
            style="@style/HorizontalLineStyle"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>