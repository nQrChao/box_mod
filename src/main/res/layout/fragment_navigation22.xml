<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.box.mod.ui.fragment.Navigation22Model" />

        <variable
            name="click"
            type="com.box.mod.ui.fragment.FragmentNavigation22.ProxyClick" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F8FB"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/centerView"
            android:background="@drawable/mod_wuxianzhe_top_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/idp_10"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/titleBar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/idp_50"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/search_edit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/idp_10"
                    android:layout_marginVertical="@dimen/idp_8"
                    android:layout_marginStart="@dimen/idp_10"
                    android:layout_weight="1"
                    android:background="@drawable/mod_wuxianzhe_search_bg"
                    android:drawableStart="@drawable/mod_wuxianzhe_search_ic"
                    android:drawablePadding="@dimen/idp_8"
                    android:gravity="center_vertical"
                    android:hint="查找热门商品"
                    android:onClick="@{() -> click.searchGame()}"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:lines="1"
                    android:paddingHorizontal="@dimen/idp_10"
                    android:singleLine="true"
                    android:text="@={vm.searchKey}"
                    android:textColor="@color/white90"
                    android:textColorHint="@color/white90"
                    android:textSize="@dimen/isp_13"
                    app:bar_rightTextColor="@color/tab_default_color"
                    app:drawableHeight="@dimen/idp_17"
                    app:drawableWidth="@dimen/idp_17" />


                <ImageView
                    android:id="@+id/titleKefu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|end"
                    android:paddingVertical="@dimen/idp_13"
                    android:onClick="@{()-> click.titleKefu()}"
                    android:paddingStart="@dimen/idp_15"
                    android:paddingEnd="@dimen/idp_15"
                    android:src="@drawable/mod_wuxianzhe_kefu_ic"
                    android:text="搜索"
                    android:textColor="@color/text_default_color"
                    android:textSize="@dimen/isp_15"
                    app:layout_constraintBottom_toBottomOf="@id/search_edit"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/search_edit"
                    bind:ignore="RtlSymmetry" />
            </LinearLayout>


            <com.box.other.tablayout.DslTabLayout
                android:id="@+id/tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:minHeight="@dimen/idp_40"
                app:tab_border_radius_size="@dimen/idp_5"
                app:tab_border_stroke_color="@color/f2_tab_color"
                app:tab_deselect_color="@color/black"
                app:tab_draw_border="false"
                app:tab_enable_text_bold="true"
                app:tab_indicator_color="#1628FF"
                app:tab_indicator_drawable="@drawable/mod_tab_line_selector"
                app:tab_indicator_height="5dp"
                app:tab_indicator_style="STYLE_BOTTOM"
                app:tab_indicator_width="WRAP_CONTENT"
                app:tab_item_is_equ_width="true"
                app:tab_select_color="@color/text_default_color"
                tools:tab_default_index="1">

                <TextView
                    android:id="@+id/tabText1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingHorizontal="@dimen/idp_10"
                    android:paddingVertical="@dimen/idp_5"
                    android:tag="hot"
                    android:text="热门榜"
                    android:textColor="@{vm.isSelect() == 0?@color/mod_tab_text_select_color:@color/black}"
                    android:textSize="@dimen/isp_13"
                    android:textStyle="bold"
                    tools:textColor="@color/mod_tab_text_select_color" />

                <TextView
                    android:id="@+id/tabText2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/idp_3"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingHorizontal="@dimen/idp_10"
                    android:paddingVertical="@dimen/idp_5"
                    android:tag="newest"
                    android:text="新品榜"
                    android:textColor="@{vm.isSelect() == 1?@color/mod_tab_text_select_color:@color/black}"
                    android:textSize="@dimen/isp_13"
                    android:textStyle="bold"
                    tools:textColor="@color/mod_tab_text_select_color" />

                <com.box.common.ui.view.DrawableTextView
                    android:id="@+id/tabText3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/idp_3"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingHorizontal="@dimen/idp_10"
                    android:paddingVertical="@dimen/idp_5"
                    android:tag="selected"
                    android:text="免费榜"
                    android:textColor="@{vm.isSelect() == 2?@color/mod_tab_text_select_color:@color/black}"
                    android:textSize="@dimen/isp_13"
                    android:textStyle="bold"
                    tools:textColor="@color/mod_tab_text_select_color" />

                <TextView
                    android:id="@+id/tabText4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/idp_3"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingHorizontal="@dimen/idp_10"
                    android:paddingVertical="@dimen/idp_5"
                    android:tag="discount"
                    android:text="折扣榜"
                    android:textColor="@{vm.isSelect() == 3?@color/mod_tab_text_select_color:@color/black}"
                    android:textSize="@dimen/isp_13"
                    android:textStyle="bold"
                    tools:textColor="@color/mod_tab_text_select_color" />

            </com.box.other.tablayout.DslTabLayout>

            <com.box.other.tablayout.DslTabLayout
                android:id="@+id/tab2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/idp_5"
                android:minHeight="@dimen/idp_40"
                android:paddingHorizontal="@dimen/idp_10"
                app:tab_border_radius_size="@dimen/idp_5"
                app:tab_border_stroke_color="@color/f2_tab_color"
                app:tab_deselect_color="@color/white90"
                app:tab_draw_border="false"
                app:tab_enable_text_bold="true"
                app:tab_indicator_color="#1628FF"
                app:tab_indicator_height="5dp"
                app:tab_indicator_style="STYLE_BOTTOM"
                app:tab_indicator_width="WRAP_CONTENT"
                app:tab_item_is_equ_width="true"
                app:tab_select_color="@color/white"
                tools:tab_default_index="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#E4503B"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingHorizontal="@dimen/idp_10"
                    android:paddingVertical="@dimen/idp_5"
                    android:tag="62"
                    android:text="角色扮演"
                    android:textColor="@{vm.isSelect2() == 0?@color/white:@color/white}"
                    android:textSize="@dimen/isp_13"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/idp_3"
                    android:layout_weight="1"
                    android:background="#FF7123"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingHorizontal="@dimen/idp_10"
                    android:paddingVertical="@dimen/idp_5"
                    android:tag="64"
                    android:text="仙侠修真"
                    android:textColor="@{vm.isSelect2() == 1?@color/white:@color/white}"
                    android:textSize="@dimen/isp_13"
                    android:textStyle="bold"/>

                <com.box.common.ui.view.DrawableTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/idp_3"
                    android:layout_weight="1"
                    android:background="#834CF6"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingHorizontal="@dimen/idp_10"
                    android:paddingVertical="@dimen/idp_5"
                    android:tag="71"
                    android:text="卡牌动漫"
                    android:textColor="@{vm.isSelect2() == 2?@color/white:@color/white}"
                    android:textSize="@dimen/isp_13"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/idp_3"
                    android:layout_weight="1"
                    android:background="#5A67FF"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingHorizontal="@dimen/idp_10"
                    android:paddingVertical="@dimen/idp_5"
                    android:tag="59"
                    android:text="三国策略"
                    android:textColor="@{vm.isSelect2() == 3?@color/white:@color/white}"
                    android:textSize="@dimen/isp_13"
                    android:textStyle="bold"/>

            </com.box.other.tablayout.DslTabLayout>

            <com.box.common.ui.layout.StatusLayout
                android:id="@+id/hl_hint"
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/idp_10">

                <com.box.other.scwang.smartrefresh.layout.SmartRefreshLayout
                    android:id="@+id/refresh_Layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    app:srlEnableLoadMore="true"
                    app:srlEnableRefresh="true">

                    <com.box.other.scwang.smart.refresh.header.ClassicsHeader
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        tools:itemCount="4"
                        tools:listitem="@layout/mod_item_rank"
                        tools:text="test" />

                    <com.box.other.scwang.smart.refresh.footer.ClassicsFooter
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.box.other.scwang.smartrefresh.layout.SmartRefreshLayout>
            </com.box.common.ui.layout.StatusLayout>

        </LinearLayout>
    </LinearLayout>
</layout>