<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.box.common.utils.UtilTime" />

        <variable
            name="vm"
            type="com.box.mod.ui.activity.jiaoyi.ModActivityGouMaiModel" />

        <variable
            name="click"
            type="com.box.mod.ui.activity.jiaoyi.ModActivityGouMai.ProxyClick" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mod_home_bg_color"
        android:orientation="vertical">

        <com.box.other.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/idp_80"
            app:srlEnableFooterTranslationContent="true"
            app:srlEnableHeaderTranslationContent="true"
            app:srlEnableLoadMore="false"
            app:srlEnableOverScrollBounce="true"
            app:srlEnableOverScrollDrag="true"
            app:srlEnablePureScrollMode="true"
            app:srlReboundDuration="700"
            app:tab_draw_divider="true">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/me_swipe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/idp_10">

                <LinearLayout
                    android:id="@+id/centerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/idp_10"
                        android:paddingHorizontal="@dimen/idp_10"
                        android:background="@drawable/bg_ffffff_10_radius"
                        android:paddingBottom="@dimen/idp_20">

                        <ImageView
                            android:id="@+id/iv_game_image"
                            android:layout_width="@dimen/idp_70"
                            android:layout_height="@dimen/idp_70"
                            android:layout_marginTop="@dimen/idp_25"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:loadRound11Image="@{vm.tradeGoodDetail.gameicon}"
                            tools:src="@mipmap/mod_icon" />

                        <TextView
                            android:id="@+id/tv_game_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:singleLine="true"
                            android:text="@{vm.tradeGoodDetail.gamename}"
                            android:textColor="@color/color_232323"
                            android:textSize="@dimen/isp_16"
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/idp_15"
                            app:layout_constraintStart_toEndOf="@id/iv_game_image"
                            app:layout_constraintTop_toBottomOf="@+id/iv_game_image"
                            app:layout_constraintTop_toTopOf="@id/iv_game_image"
                            tools:text="宠物星球(送GM无限充）" />

                        <TextView
                            android:id="@+id/tv_genre_str"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:singleLine="true"
                            android:text="@{vm.tradeGoodDetail.genre_str}"
                            android:textColor="@color/color_232323"
                            android:textSize="@dimen/isp_14"
                            app:layout_constraintStart_toStartOf="@+id/tv_game_name"
                            app:layout_constraintTop_toBottomOf="@+id/tv_game_name"
                            tools:text="角色*仙侠" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="22dp"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_fffbfb_stroke_ffc8cd"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/iv_game_image">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="当前售价："
                                android:textColor="@color/color_ff2b3f"
                                android:textSize="@dimen/isp_12" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="¥"
                                android:textColor="@color/color_ff2b3f"
                                android:textSize="@dimen/isp_20" />

                            <TextView
                                android:id="@+id/tv_good_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="6dp"
                                android:text="@{vm.tradeGoodDetail.goods_price}"
                                android:textColor="@color/color_ff2b3f"
                                android:textSize="@dimen/isp_25"
                                android:textStyle="bold"
                                tools:text="50000" />
                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.box.common.ui.view.DrawableTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/idp_10"
                        android:drawableStart="@mipmap/mod_title_left_tip"
                        android:drawablePadding="@dimen/idp_5"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="@dimen/idp_10"
                        android:text="支付方式"
                        android:textColor="@color/color_232323"
                        android:textSize="@dimen/isp_15"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/idp_10"
                        android:background="@drawable/bg_ffffff_10_radius"
                        android:paddingVertical="@dimen/idp_10">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:visibility="gone"
                                android:onClick="@{()->click.ali()}"
                                android:id="@+id/aliPayLayout"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/idp_45"
                                android:paddingVertical="@dimen/idp_10"
                                android:layout_marginTop="@dimen/idp_5"
                                android:gravity="center"
                                android:paddingHorizontal="@dimen/idp_20">

                                <ImageView
                                    android:layout_width="@dimen/idp_24"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/pay_alipay" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/idp_35"
                                    android:gravity="center"
                                    android:text="支付宝支付"
                                    android:textColor="@color/text_default_color"
                                    android:textSize="@dimen/isp_14" />

                                <androidx.appcompat.widget.AppCompatCheckBox
                                    android:id="@+id/aliCheck"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:background="@null"
                                    android:checked="@{vm.payType == 1?true:false}"
                                    android:scaleX="0.9"
                                    android:scaleY="0.9"
                                    app:buttonCompat="@drawable/checkbox_around_selector" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/wxLayout"
                                android:onClick="@{()->click.wx()}"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/idp_45"
                                android:paddingVertical="@dimen/idp_10"
                                android:layout_marginTop="@dimen/idp_5"
                                android:gravity="center"
                                android:paddingHorizontal="@dimen/idp_20">

                                <ImageView
                                    android:layout_width="@dimen/idp_24"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/pay_wechat" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/idp_35"
                                    android:gravity="center"
                                    android:text="微信支付"
                                    android:textColor="@color/text_default_color"
                                    android:textSize="@dimen/isp_14" />

                                <androidx.appcompat.widget.AppCompatCheckBox
                                    android:id="@+id/wxCheck"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:background="@null"
                                    android:checked="@{vm.payType == 2?true:false}"
                                    android:scaleX="0.9"
                                    android:scaleY="0.9"
                                    app:buttonCompat="@drawable/checkbox_around_selector" />
                            </RelativeLayout>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </com.box.other.scwang.smartrefresh.layout.SmartRefreshLayout>

        <RelativeLayout
            android:id="@+id/fl_good_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/idp_70"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:paddingHorizontal="@dimen/idp_10"
            android:paddingTop="@dimen/idp_10">

            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/idp_45"
                android:layout_marginStart="@dimen/idp_10"
                android:background="@drawable/mod_btn_confirm_selector"
                android:onClick="@{()->click.pay()}"
                android:text="确认支付"
                android:textColor="@color/white"
                android:textSize="@dimen/isp_15"
                android:textStyle="bold"
                tools:text="确认支付" />

        </RelativeLayout>
    </RelativeLayout>
</layout>