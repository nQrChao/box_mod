<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.chaoji.mod.ui.activity.modmain.mod2.Mod2Fragment2Model" />

        <variable
            name="click"
            type="com.chaoji.mod.ui.activity.modmain.mod2.Mod2Fragment2.ProxyClick" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.chaoji.other.hjq.titlebar.TitleBar
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/idp_40"
            android:gravity="center"
            app:leftIcon="@null"
            app:leftTitleColor="@color/black90"
            app:leftTitleSize="@dimen/isp_17"
            app:leftTitleStyle="bold"
            app:titleColor="@color/black90"
            app:titleSize="@dimen/isp_16"
            app:titleStyle="bold" />


            <LinearLayout
                android:id="@+id/centerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="@dimen/idp_10"
                android:orientation="vertical">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="@dimen/idp_10"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_default="wrap"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    bind:itemCount="2"
                    tools:listitem="@layout/mod_item_applets" />


                <com.chaoji.other.tablayout.DslTabLayout
                    android:id="@+id/tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:minHeight="@dimen/idp_40"
                    android:paddingHorizontal="@dimen/idp_10"
                    app:tab_border_radius_size="@dimen/idp_5"
                    app:tab_border_stroke_color="@color/f2_tab_color"
                    app:tab_deselect_color="@color/f2_tab_color"
                    app:tab_draw_border="true"
                    app:tab_indicator_style="STYLE_NONE"
                    app:tab_item_is_equ_width="true"
                    app:tab_select_color="@color/white"
                    tools:tab_default_index="1">

                    <LinearLayout
                        android:tag="151"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/fj_img"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:src="@{vm.isSelect() == 0 ? @drawable/ic_moyu_bizi_type_fj_normal : @drawable/ic_moyu_bizi_type_fj_select}" />

                        <TextView
                            android:id="@+id/fj_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/idp_5"
                            android:gravity="center"
                            android:text="热门"
                            android:textColor="@{vm.isSelect() == 0?@color/white:@color/colorAccent}" />

                    </LinearLayout>


                    <LinearLayout
                        android:tag="153"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/kh_img"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:src="@{vm.isSelect() == 1 ? @drawable/ic_moyu_bizi_type_kh_normal : @drawable/ic_moyu_bizi_type_kh_select}" />

                        <TextView
                            android:id="@+id/kh_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/idp_5"
                            android:gravity="center"
                            android:text="游戏"
                            android:textColor="@{vm.isSelect() == 1?@color/white:@color/colorAccent}" />

                    </LinearLayout>

                    <LinearLayout
                        android:tag="154"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/rw_img"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:src="@{vm.isSelect() == 2 ? @drawable/ic_moyu_bizi_type_rw_normal : @drawable/ic_moyu_bizi_type_rw_select}" />

                        <TextView
                            android:id="@+id/rw_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/idp_5"
                            android:gravity="center"
                            android:text="美女"
                            android:textColor="@{vm.isSelect() == 2?@color/white:@color/colorAccent}" />

                    </LinearLayout>


                </com.chaoji.other.tablayout.DslTabLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/idp_10"
                    app:layout_constraintStart_toStartOf="parent"
                    bind:itemCount="2"
                    tools:listitem="@layout/mod_item_applets_pic" />

            </LinearLayout>
    </LinearLayout>
</layout>