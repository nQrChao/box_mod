<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.chaoji.mod.ui.fragment.MainFragment4Model" />

        <variable
            name="click"
            type="com.chaoji.mod.ui.fragment.MainFragment4.ProxyClick" />

        <import type="com.chaoji.other.blankj.utilcode.util.StringUtils" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MergeRootFrame">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <com.chaoji.im.ui.widget.XCollapsingToolbarLayout
                android:id="@+id/ctl_bar"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:contentScrim="@color/white"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|enterAlways"
                app:scrimVisibleHeightTrigger="@dimen/idp_120"
                app:toolbarId="@+id/toolbar">

                <ImageView
                    android:id="@+id/mIv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@mipmap/bg_user_mine_header" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/idp_50"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:onClick="@{()-> click.login()}"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/idp_20"
                    android:paddingTop="@dimen/idp_20">

                    <ImageView
                        android:id="@+id/user_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:onClick="@{()-> click.login()}"
                        android:src="@drawable/ic_user_login_new_sign" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/idp_15"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:onClick="@{()-> click.login()}"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/idp_5"
                            android:clickable="false"
                            android:gravity="start"
                            android:text="@{StringUtils.isEmpty(vm.modUser.username)?&quot;请点击登录&quot;:vm.modUser.username}"
                            android:textColor="@color/text_default_color"
                            android:textSize="@dimen/isp_18"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/idp_5"
                            android:clickable="false"
                            android:gravity="start"
                            android:text="@{StringUtils.isEmpty(vm.modUser.uid)?&quot;友友驾到，快乐冒泡~&quot;:StringUtils.format(&quot;ID:%s&quot;, vm.modUser.uid)}"
                            android:textColor="@color/text_hit_color"
                            android:textSize="@dimen/isp_16"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/titleBar"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:layout_below="@+id/view"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_back"
                            android:layout_width="@dimen/idp_24"
                            android:layout_height="@dimen/idp_24"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:visibility="invisible"
                            app:srcCompat="@drawable/search_ic"
                            app:tint="@color/white" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_title"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/idp_20"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingVertical="@dimen/idp_5"
                            android:text="个人中心"
                            android:textColor="@color/black90"
                            android:textSize="@dimen/isp_16"
                            android:textStyle="bold"
                            android:visibility="@{vm.shown?View.VISIBLE:View.GONE}" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_icon"
                            android:layout_width="@dimen/idp_24"
                            android:layout_height="@dimen/idp_24"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:visibility="invisible"
                            app:srcCompat="@drawable/search_ic"
                            app:tint="@color/white" />

                    </LinearLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.chaoji.im.ui.widget.XCollapsingToolbarLayout>


        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-60dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/idp_15">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/idp_15"
                    android:background="@drawable/a_rounded_20"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/idp_10"
                    android:paddingVertical="@dimen/idp_15"
                    android:visibility="gone"
                    android:weightSum="9">

                    <com.chaoji.im.ui.view.DrawableTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:drawableTop="@mipmap/mod_me_top_ic1"
                        android:drawablePadding="@dimen/idp_5"
                        android:gravity="center"
                        android:onClick="@{()-> click.top1()}"
                        android:text="交易记录" />

                    <com.chaoji.im.ui.view.DrawableTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:drawableTop="@mipmap/mod_me_top_ic2"
                        android:drawablePadding="@dimen/idp_5"
                        android:gravity="center"
                        android:onClick="@{()-> click.top2()}"
                        android:text="我的收藏" />

                    <com.chaoji.im.ui.view.DrawableTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:drawableTop="@mipmap/mod_me_top_ic3"
                        android:drawablePadding="@dimen/idp_5"
                        android:gravity="center"
                        android:onClick="@{()-> click.top3()}"
                        android:text="消息中心" />

                </LinearLayout>

                <com.chaoji.im.ui.view.DrawableTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/idp_10"
                    android:drawableStart="@mipmap/mod_title_left_tip"
                    android:drawablePadding="@dimen/idp_5"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/idp_10"
                    android:text="专属客服"
                    android:textColor="@color/color_232323"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/idp_30"
                    app:cardElevation="@dimen/idp_2"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/a_rounded_20"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/idp_5"
                        android:paddingVertical="@dimen/idp_5">

                        <com.chaoji.im.ui.layout.SettingBar
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{()-> click.jiaoyi()}"
                            android:paddingVertical="@dimen/idp_5"
                            app:bar_leftDrawableSize="@dimen/idp_30"
                            app:bar_leftText="交易记录"
                            app:bar_lineVisible="false">

                            <Button
                                android:layout_width="@dimen/idp_80"
                                android:layout_height="@dimen/idp_28"
                                android:layout_gravity="end|center_vertical"
                                android:layout_marginHorizontal="@dimen/idp_15"
                                android:background="@drawable/mod_btn_confirm_selector"
                                android:gravity="center"
                                android:onClick="@{()-> click.jiaoyi()}"
                                android:text="查看"
                                android:textColor="@color/white" />

                        </com.chaoji.im.ui.layout.SettingBar>

                        <com.chaoji.im.ui.layout.SettingBar
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/idp_5"
                            android:visibility="gone"
                            app:bar_leftDrawable="@mipmap/mod_me_top_ic5"
                            app:bar_leftDrawableSize="@dimen/idp_30"
                            app:bar_leftText="QQ在线客服"
                            app:bar_lineVisible="false">

                            <Button
                                android:layout_width="@dimen/idp_80"
                                android:layout_height="@dimen/idp_28"
                                android:layout_gravity="end|center_vertical"
                                android:layout_marginHorizontal="@dimen/idp_15"
                                android:background="@drawable/mod_btn_confirm_selector"
                                android:gravity="center"
                                android:onClick="@{()-> click.qqKeFu()}"
                                android:text="去聊他"
                                android:textColor="@color/white" />

                        </com.chaoji.im.ui.layout.SettingBar>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/idp_10"
                    android:background="@drawable/bg_f1_top_2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/idp_10"
                    android:paddingVertical="@dimen/idp_15"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/idp_10"
                        android:onClick="@{()-> click.testInfo()}"
                        android:text="关注公众号，联系在线客服"
                        android:textColor="#6972FF"
                        android:textSize="@dimen/isp_20"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/idp_20"
                        android:text="打开微信搜索“小点游戏乐园”，并关注"
                        android:textColor="#202020"
                        android:textSize="@dimen/isp_14" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/idp_35"
                        android:layout_marginTop="@dimen/idp_20"
                        android:background="@drawable/mod_me_gzh_selector"
                        android:gravity="center"
                        android:onClick="@{()-> click.copyGZH()}"
                        android:paddingHorizontal="@dimen/idp_50"
                        android:text="复制公众号并关注"
                        android:textColor="#6972FF"
                        android:textSize="@dimen/isp_16"
                        android:textStyle="bold" />

                </LinearLayout>


                <com.chaoji.im.ui.view.DrawableTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/idp_10"
                    android:drawableStart="@mipmap/mod_title_left_tip"
                    android:drawablePadding="@dimen/idp_5"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/idp_10"
                    android:text="服务与安全"
                    android:textColor="@color/color_232323"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/idp_5">

                        <com.chaoji.im.ui.layout.SettingBar
                            android:id="@+id/user_setting_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/idp_8"
                            android:background="@drawable/bg_ffffff_e7e7e7_stroke_10_radius"
                            app:bar_leftText="个性推送"
                            app:bar_lineVisible="true"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/friend_disturb_setting">

                            <com.chaoji.im.ui.view.SwitchButton
                                android:id="@+id/user_setting_1_switch"
                                android:layout_width="@dimen/idp_40"
                                android:layout_height="@dimen/idp_18"
                                android:layout_gravity="end|center_vertical"
                                android:layout_marginHorizontal="@dimen/idp_15"
                                app:switchButtonState="@{vm.tuiSong}" />

                        </com.chaoji.im.ui.layout.SettingBar>

                        <com.chaoji.im.ui.layout.SettingBar
                            android:id="@+id/user_setting_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/idp_5"
                            android:background="@drawable/bg_ffffff_e7e7e7_stroke_10_radius"
                            android:onClick="@{()-> click.fanKui()}"
                            app:bar_leftText="意见反馈"
                            app:bar_rightDrawable="@drawable/arrows_right_ic" />

                        <com.chaoji.im.ui.layout.SettingBar
                            android:id="@+id/user_setting_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/idp_5"
                            android:background="@drawable/bg_ffffff_e7e7e7_stroke_10_radius"
                            android:onClick="@{()-> click.keFu()}"
                            app:bar_leftText="联系客服"
                            app:bar_rightDrawable="@drawable/arrows_right_ic" />

                        <com.chaoji.im.ui.layout.SettingBar
                            android:id="@+id/user_setting_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/idp_5"
                            android:background="@drawable/bg_ffffff_e7e7e7_stroke_10_radius"
                            android:onClick="@{()-> click.beiAn()}"
                            app:bar_leftText="APP备案码"
                            app:bar_rightDrawable="@drawable/arrows_right_ic"
                            app:bar_rightTextSize="@dimen/isp_11" />

                        <com.chaoji.im.ui.layout.SettingBar
                            android:id="@+id/user_setting_7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/idp_5"
                            android:background="@drawable/bg_ffffff_e7e7e7_stroke_10_radius"
                            android:onClick="@{()-> click.fangChenMi()}"
                            app:bar_leftText="防沉迷政策"
                            app:bar_rightDrawable="@drawable/arrows_right_ic" />

                        <com.chaoji.im.ui.layout.SettingBar
                            android:id="@+id/user_setting_8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/idp_5"
                            android:background="@drawable/bg_ffffff_e7e7e7_stroke_10_radius"
                            android:onClick="@{()-> click.uAq()}"
                            app:bar_leftText="隐私权限安全"
                            app:bar_rightDrawable="@drawable/arrows_right_ic" />

                        <com.chaoji.im.ui.layout.SettingBar
                            android:id="@+id/user_setting_9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/idp_5"
                            android:background="@drawable/bg_ffffff_e7e7e7_stroke_10_radius"
                            android:onClick="@{()-> click.quit()}"
                            android:visibility="@{vm.isLogin?View.VISIBLE:View.GONE}"
                            app:bar_leftText="退出账号"
                            app:bar_rightDrawable="@drawable/arrows_right_ic" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/idp_20"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_tips"
                            android:layout_width="@dimen/idp_60"
                            android:layout_height="@dimen/idp_70"
                            android:src="@drawable/mod_shiling_18"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/idp_10"
                            android:gravity="center_vertical"
                            android:lineSpacingMultiplier="1.2"
                            android:text="游戏适合18岁以上的用户使用，未实名用户请完成实名认证。未实名与未成年用户会根据国家政策要求进行防沉迷限制。适度游戏益脑，请您合理控制游戏时间，避免沉溺游戏影响生活。注意自我保护，防范网络陷阱。"
                            android:textColor="#CCCCCC"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toTopOf="@+id/ll_tips"
                            app:layout_constraintLeft_toRightOf="@+id/iv_tips"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="@dimen/idp_20"
            android:layout_marginTop="@dimen/idp_65"
            android:visibility="gone"
            app:layout_anchor="@+id/nestedScrollView"
            app:layout_anchorGravity="top|start"
            app:srcCompat="@drawable/ic_user_login_new_sign" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</layout>