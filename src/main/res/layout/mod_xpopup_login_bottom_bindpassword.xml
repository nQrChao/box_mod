<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/a_rounded_top_b_10"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/idp_20"
        android:paddingVertical="@dimen/idp_20">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="设置登录密码"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/isp_16"
                android:textStyle="bold" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">


            <com.box.common.ui.view.ClearEditText
                android:id="@+id/password_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/idp_45"
                android:layout_marginTop="@dimen/idp_20"
                android:background="@drawable/mod_edit_bg"
                android:hint="请输入密码"
                android:inputType="number"
                android:lines="1"
                android:maxLength="11"
                android:paddingHorizontal="@dimen/idp_10"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/text_hit_color"
                android:textSize="@dimen/isp_14" />

            <com.box.common.ui.view.ClearEditText
                android:id="@+id/password_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/idp_45"
                android:layout_marginTop="@dimen/idp_20"
                android:background="@drawable/mod_edit_bg"
                android:hint="请再次输入密码"
                android:inputType="number"
                android:lines="1"
                android:maxLength="11"
                android:paddingHorizontal="@dimen/idp_10"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/text_hit_color"
                android:textSize="@dimen/isp_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/idp_20"
                android:orientation="horizontal"
               >

                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="@dimen/idp_150"
                    android:layout_height="@dimen/idp_40"
                    android:layout_marginEnd="@dimen/idp_10"
                    android:layout_weight="1"
                    android:background="@drawable/button_cancel_selector_2"
                    android:gravity="center"
                    android:text="下次再说"
                    android:textColor="@color/white"
                    android:textSize="@dimen/isp_15"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/reg_password2_ll" />

                <Button
                    android:id="@+id/confirm_button"
                    android:layout_width="@dimen/idp_150"
                    android:layout_height="@dimen/idp_40"
                    android:layout_marginStart="@dimen/idp_10"
                    android:layout_weight="1"
                    android:background="@drawable/button_circle_selector"
                    android:gravity="center"
                    android:text="确认设置"
                    android:textColor="@color/white"
                    android:textSize="@dimen/isp_15"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/reg_password2_ll" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</layout>