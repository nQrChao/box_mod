<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/a_rounded_top_b_10"
    android:orientation="vertical"
    android:paddingVertical="@dimen/idp_20">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="服务协议与隐私政策等指引"
            android:textColor="@color/text_default_color"
            android:textSize="@dimen/isp_16"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/cancel"
            android:layout_width="@dimen/idp_22"
            android:layout_height="@dimen/idp_22"
            android:layout_alignParentEnd="true"
            android:paddingStart="@dimen/idp_1"
            android:paddingTop="@dimen/idp_10"
            android:paddingEnd="@dimen/idp_10"
            android:src="@drawable/close_g_ic"
            android:visibility="gone" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/idp_15"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/idp_15">

        <TextView
            android:id="@+id/content"
            style="@style/QuestionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/idp_15"
            android:text="进入下一步前，请先阅读并同意《用户服务协议》、《隐私政策》" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/idp_20"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/idp_20">

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="@dimen/idp_150"
                android:layout_height="@dimen/idp_40"
                android:layout_marginEnd="@dimen/idp_10"
                android:layout_weight="1"
                android:background="@drawable/button_cancel_selector_2"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="@dimen/isp_15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reg_password2_ll" />

            <Button
                android:id="@+id/confirm_button"
                android:layout_width="@dimen/idp_150"
                android:layout_height="@dimen/idp_40"
                android:layout_marginStart="@dimen/idp_10"
                android:layout_weight="1"
                android:background="@drawable/mod_btn_confirm_selector"
                android:gravity="center"
                android:text="同意并继续"
                android:textColor="@color/white"
                android:textSize="@dimen/isp_15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reg_password2_ll" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>