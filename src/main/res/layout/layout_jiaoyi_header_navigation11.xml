<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mod_home_bg_color"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/test_f1_top" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:background="@drawable/a_rounded_20"
            android:orientation="vertical">

            <include
                layout="@layout/mod_item_jiaoyi_f1_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/idp_100"
                android:layout_marginHorizontal="@dimen/idp_20"
                android:layout_marginTop="@dimen/idp_20" />

            <include
                layout="@layout/mod_item_jiaoyi_f1_top2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/idp_20"
                android:layout_marginTop="@dimen/idp_20"
                android:layout_marginBottom="@dimen/idp_20" />
        </LinearLayout>

    </LinearLayout>
</layout>