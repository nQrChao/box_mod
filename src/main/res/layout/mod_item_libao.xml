<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.chaoji.other.blankj.utilcode.util.StringUtils" />

        <variable
            name="gameHallListBean"
            type="com.chaoji.im.data.model.ModGameHallList" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/a_rounded_10"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/idp_10"
        android:paddingVertical="@dimen/idp_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@drawable/a_rounded_20">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/idp_60"
                android:layout_height="@dimen/idp_60"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/textLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:loadRound11Image="@{gameHallListBean.gameicon}"
                tools:src="@mipmap/mod_icon" />

            <LinearLayout
                android:id="@+id/textLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/idp_10"
                android:layout_marginEnd="@dimen/idp_10"
                android:layout_toStartOf="@id/lingqu"
                android:layout_toEndOf="@id/icon"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{gameHallListBean.gamename}"
                    android:textColor="@color/text_default_color"
                    android:textSize="@dimen/isp_13"
                    android:textStyle="bold"
                    tools:text="神陵武装神陵武装神陵武装神陵武装" />

                <TextView
                    android:id="@+id/tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:paddingVertical="@dimen/idp_2"
                    android:singleLine="true"
                    android:text="@{gameHallListBean.game_summary}"
                    android:textColor="@color/bbl_999999"
                    android:textSize="@dimen/isp_12"
                    tools:text="格调1服·榜二高战成品号格调1服*神陵神陵神陵" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/idp_3"
                    tools:itemCount="1"
                    tools:listitem="@layout/mod_item_game_label" />

            </LinearLayout>

            <Button
                android:id="@+id/lingqu"
                android:layout_width="@dimen/idp_60"
                android:layout_height="@dimen/idp_25"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/mod_item_libao_btn_bg"
                android:text="领号"
                android:textColor="@color/white"
                android:textSize="@dimen/isp_12"
                android:textStyle="bold" />


        </RelativeLayout>


    </RelativeLayout>

</layout>