<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="appletInfoLunTan"
            type="com.chaoji.im.data.model.AppletsLunTan" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/idp_15"
        android:paddingVertical="@dimen/idp_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/idp_40"
                android:layout_height="@dimen/idp_40"
                android:layout_gravity="center"
                app:loadRoundSizeImage="@{appletInfoLunTan.pic}"
                tools:src="@mipmap/mod_icon" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/idp_10"
                android:layout_toEndOf="@id/icon"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{appletInfoLunTan.xiaobian}"
                android:textColor="#AAADAF"
                android:textSize="@dimen/isp_12"
                tools:text="屠龙刀" />

            <TextView
                android:id="@+id/app_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical|end"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="2"
                android:text="@{appletInfoLunTan.shijian}"
                android:textColor="#AAADAF"
                android:textSize="@dimen/isp_12"
                tools:text="2025.06.24" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginStart="@dimen/idp_10"
                android:layout_marginTop="@dimen/idp_10"
                android:layout_toEndOf="@id/icon"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{appletInfoLunTan.title}"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/isp_14"
                tools:text="外网玩家曝N网正在删除一些《剑仙》的新闻" />
        </RelativeLayout>


    </LinearLayout>

</layout>