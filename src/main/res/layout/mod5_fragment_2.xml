<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.chaoji.mod.ui.activity.modmain.mod5.Mod5Fragment2Model" />

        <variable
            name="click"
            type="com.chaoji.mod.ui.activity.modmain.mod5.Mod5Fragment2.ProxyClick" />
    </data>

    <LinearLayout
        android:background="#61E3F7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.chaoji.other.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srlEnableFooterTranslationContent="true"
            app:srlEnableHeaderTranslationContent="true"
            app:srlEnableLoadMore="false"
            app:srlEnableOverScrollBounce="true"
            app:srlEnableOverScrollDrag="true"
            app:srlEnablePureScrollMode="true"
            app:srlReboundDuration="700"
            app:tab_draw_divider="true">

            <LinearLayout
                android:id="@+id/centerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/idp_10"
                android:layout_marginVertical="@dimen/idp_10"
                android:orientation="vertical">

                <com.chaoji.other.tablayout.DslTabLayout
                    android:id="@+id/tab"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/idp_50"
                    android:background="@drawable/mod_main_layout_bg"
                    android:paddingHorizontal="@dimen/idp_5"
                    android:paddingVertical="@dimen/idp_5"
                    app:tab_draw_divider="true"
                    app:tab_highlight_height_offset="@dimen/idp_10"
                    app:tab_divider_margin_top="@dimen/idp_10"
                    app:tab_divider_margin_bottom="@dimen/idp_10"
                    app:tab_divider_solid_color="@color/common_text_color_gray"
                    app:tab_indicator_drawable="@drawable/common_btn_sure_background"
                    app:tab_indicator_height="@dimen/idp_2"
                    app:tab_indicator_style="STYLE_BOTTOM"
                    app:tab_indicator_width="@dimen/idp_10"
                    tools:tab_default_index="0"
                    app:tab_orientation="HORIZONTAL"
                    app:tab_select_color="@color/colorAccent" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/idp_10"
                    android:background="@drawable/mod_main_layout_bg"
                    android:orientation="horizontal"
                    android:padding="@dimen/idp_10"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/gameImageLayout"
                    bind:itemCount="2"
                    tools:listitem="@layout/mod_item_applets_pic" />

            </LinearLayout>
        </com.chaoji.other.scwang.smartrefresh.layout.SmartRefreshLayout>
    </LinearLayout>
</layout>