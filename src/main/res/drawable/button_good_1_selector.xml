<?xml version="1.0" encoding="utf-8"?>
<!-- 默认按钮样式 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 禁用状态 -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners
                android:bottomRightRadius="@dimen/idp_99"
                android:topRightRadius="@dimen/idp_99" />
            <solid android:color="@color/common_button_disable_color" />
        </shape>
    </item>

    <!-- 按压状态 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="#AA6972FF"
                android:gradientRadius="@dimen/idp_180"
                android:startColor="#AAEC18F8"
                android:type="linear"
                android:useLevel="false" />
            <corners
                android:bottomRightRadius="@dimen/idp_99"
                android:topRightRadius="@dimen/idp_99" />
        </shape>
    </item>

    <!-- 焦点状态 -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="#AA6972FF"
                android:gradientRadius="@dimen/idp_180"
                android:startColor="#AAEC18F8"
                android:type="linear"
                android:useLevel="false" />
            <corners
                android:bottomRightRadius="@dimen/idp_99"
                android:topRightRadius="@dimen/idp_99" />
        </shape>
    </item>

    <!-- 默认状态 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="#6972FF"
                android:gradientRadius="@dimen/idp_180"
                android:startColor="#EC18F8"
                android:type="linear"
                android:useLevel="false" />
            <corners
                android:bottomRightRadius="@dimen/idp_99"
                android:topRightRadius="@dimen/idp_99" />
        </shape>
    </item>

</selector>